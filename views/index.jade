extends layout

block content
  div.container
    img(src='../images/MeTTY.jpg').col-xs-12
  div#start
    img#driver(src='../images/driver.png').col-xs-6
    img#user(src='../images/user.png').col-xs-6
  div.container.reg#Register
    h1.page-header Register
    div( class="form-group")
      label(for="usr") Name:
      input( type="text" class="form-control" id="usr")
    div#matr(class="form-group")
      label(for="usr") Matricula:
      input( type="text" class="form-control" id="mat")
    div(class="form-group")
      label(for="pwd") Password:
      input( type="password" class="form-control" id="pwd")
    div(class="form-group")
      label(for="email") Email:
      input(type="text" class="form-control" id="email")
    button#register(class="btn btn-lg btn-success btn-block" type="submit") Submit

    script(src='../javascripts/register.js')
